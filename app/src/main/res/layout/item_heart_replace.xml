<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="181dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"
    android:orientation="vertical"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="20dp"
    app:cardElevation="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/item_heart_recomplace_img"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@drawable/kakao_default_profile_image" />

        <RelativeLayout
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="21dp"
            android:background="@drawable/img_rank">

            <TextView
                android:id="@+id/item_heart_recomplace_rank_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:text="1"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_heart_recomplace_rank_below_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="4dp"
                android:text="RANK"
                android:textColor="#ffffff"
                android:textSize="5sp"
                android:textStyle="bold" />

        </RelativeLayout>


        <TextView
            android:id="@+id/item_heart_recomplace_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="104dp"
            android:text="흘림목"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_heart_recomplace_address_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="18dp"
            android:text="서울시 무슨구 무슨동 123-123"
            android:layout_alignParentBottom="true"
            android:textColor="#2b2b2b"
            android:textSize="12sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>