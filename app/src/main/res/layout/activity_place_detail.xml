<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Jemin.Activity.PlaceDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="231dp">

            <ImageView
                android:id="@+id/place_detail_background_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bg_sample"
                android:scaleType="centerCrop"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#40000000"
                />

            <ImageView
                android:id="@+id/place_detail_heart_btn"
                android:layout_width="23.1dp"
                android:layout_height="20.4dp"
                android:background="@drawable/btn_heart"
                android:layout_marginTop="12dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="17dp"
                />



        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:layout_width="312dp"
            android:layout_height="270.6dp"
            android:background="#ffffff"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="170dp"
            app:cardElevation="3dp"
            android:layout_centerHorizontal="true"
            >

            <RelativeLayout
                android:id="@+id/place_detail_center_layout"
                android:layout_width="312dp"
                android:layout_height="309.6dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/proect_detail_round_background">

                <TextView
                    android:id="@+id/place_detail_type_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="밥먹자"
                    android:textSize="13sp"
                    android:textColor="#484848"
                    android:layout_marginTop="15dp"
                    android:layout_centerHorizontal="true"
                    />


                <TextView
                    android:id="@+id/place_detail_place_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="비포선라이즈 상수점"
                    android:textSize="20sp"
                    android:textColor="#383838"
                    android:textStyle="bold"
                    android:layout_marginTop="57dp"
                    android:layout_centerHorizontal="true"
                    />

                <View
                    android:layout_width="289dp"
                    android:layout_height="0.3dp"
                    android:layout_below="@+id/place_detail_place_name_tv"
                    android:layout_marginTop="23.5dp"
                    android:background="#707070"
                    android:layout_centerHorizontal="true"
                    />

                <TextView
                    android:id="@+id/place_detail_address_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="주소"
                    android:textSize="13sp"
                    android:textColor="#2b2b2b"
                    android:layout_below="@+id/place_detail_place_name_tv"
                    android:layout_marginTop="51dp"
                    android:layout_marginLeft="25dp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/place_detail_new_address_content_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="서울 마포구 잔다리로 20-11 2층"
                    android:textSize="13sp"
                    android:textColor="#2b2b2b"
                    android:layout_alignTop="@+id/place_detail_address_title_tv"
                    android:layout_toRightOf="@+id/place_detail_address_title_tv"
                    android:layout_marginLeft="12dp"
                    />

                <TextView
                    android:id="@+id/place_detail_old_address_content_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="지번 : 서울 마포구 서교동 367-15"
                    android:textSize="13sp"
                    android:textColor="#818181"
                    android:layout_marginTop="7dp"
                    android:layout_below="@+id/place_detail_new_address_content_tv"
                    android:layout_toRightOf="@+id/place_detail_address_title_tv"
                    android:layout_marginLeft="12dp"
                    />

                <Button
                    android:id="@+id/place_detail_copy_btn"
                    android:layout_width="31dp"
                    android:layout_height="18dp"
                    android:background="#aaa0d8"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@id/place_detail_address_title_tv"
                    android:layout_marginRight="22dp"
                    android:text="복사"
                    android:textColor="#ffffff"
                    android:textSize="10sp"
                    />

                <TextView
                    android:id="@+id/place_detail_phone_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="번호"
                    android:textSize="13sp"
                    android:textColor="#2b2b2b"
                    android:layout_below="@+id/place_detail_address_title_tv"
                    android:layout_marginTop="34dp"
                    android:layout_marginLeft="25dp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/place_detail_phone_content_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="02-333-7934"
                    android:textSize="13sp"
                    android:textColor="#2b2b2b"
                    android:layout_alignTop="@+id/place_detail_phone_title_tv"
                    android:layout_toRightOf="@+id/place_detail_phone_title_tv"
                    android:layout_marginLeft="12dp"
                    />

                <TextView
                    android:id="@+id/place_detail_homepage_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="홈페이지"
                    android:textSize="13sp"
                    android:textColor="#2b2b2b"
                    android:layout_below="@+id/place_detail_phone_title_tv"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="25dp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/place_detail_homepage_content_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="http://beforesunrise.com"
                    android:textSize="13sp"
                    android:textColor="#2b2b2b"
                    android:layout_alignTop="@+id/place_detail_homepage_title_tv"
                    android:layout_toRightOf="@+id/place_detail_homepage_title_tv"
                    android:layout_marginLeft="12dp"
                    android:linksClickable="true"
                    android:autoLink="web"
                    />




            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="409dp"
                android:layout_marginTop="170dp"
                android:layout_centerHorizontal="true">


            </RelativeLayout>

        </android.support.v7.widget.CardView>


    </RelativeLayout>

</LinearLayout>