<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10dp"
    android:orientation="vertical"
    app:cardCornerRadius="5dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/room_recomplace_img"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:background="@drawable/kakao_default_profile_image"
        />
    
    <TextView
        android:id="@+id/room_recomplace_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="흘림목"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#2b2b2b"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="9dp"
        android:layout_below="@+id/room_recomplace_img"
        />

    <TextView
        android:id="@+id/room_recomplace_address_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="서울시 무슨구 무슨동 123-123"
        android:textColor="#2b2b2b"
        android:textSize="11sp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="9dp"
        />
    </RelativeLayout>
</android.support.v7.widget.CardView>