<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <!-- TODO: Update blank fragment layout -->
        <!-- 툴바, 추가된 소스 -->
        <android.support.v7.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#ffffff"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="추천"
            android:textSize="18sp"
            android:textColor="#383838"
            android:textStyle="bold"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="장소"
            android:textSize="18sp"
            android:textColor="#383838"
            android:layout_gravity="center"
            />
        </android.support.v7.widget.Toolbar>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="197dp"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="약속 장소 인기 순위"
                    android:textSize="18sp"
                    android:textColor="#2b2b2b"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="30dp"
                    android:textStyle="bold"
                    />
            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:orientation="horizontal"
                >

                <android.support.v7.widget.CardView
                    android:id="@+id/recom_hot_second_first_layout"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="10dp"
                    android:layout_toLeftOf="@+id/recom_hot_second_location_layout"
                    >
                    <RelativeLayout
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/img_top3"
                        android:contentDescription="@null"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1위"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="7dp"
                            android:textSize="12sp"
                            android:textColor="#ffffff"
                            />
                        <TextView
                            android:id="@+id/recom_hot_first_location_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="석계역"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:textColor="#764dd1"
                            android:layout_marginTop="49dp"
                            android:layout_centerHorizontal="true"
                            />
                    </RelativeLayout>

                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:id="@+id/recom_hot_second_location_layout"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_centerHorizontal="true"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="2dp"
                    >
                    <RelativeLayout
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/img_top3"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2위"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="7dp"
                            android:textSize="12sp"
                            android:textColor="#ffffff"
                            />
                        <TextView
                            android:id="@+id/recom_hot_second_location_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="공릉역"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:textColor="#764dd1"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="49dp"
                            />

                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/recom_hot_third_location_layout"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="10dp"
                    android:layout_toRightOf="@+id/recom_hot_second_location_layout"
                    >

                    <RelativeLayout
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/img_top3"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3위"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="7dp"
                            android:textSize="12sp"
                            android:textColor="#ffffff"
                            />
                        <TextView
                            android:id="@+id/recom_hot_third_location_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="노원역"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:textColor="#764dd1"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="49dp"
                            />

                    </RelativeLayout>
                </android.support.v7.widget.CardView>


            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="찜한 장소 TOP 10"
                    android:textSize="18sp"
                    android:textColor="#2b2b2b"
                    android:layout_marginLeft="25dp"
                    android:textStyle="bold"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            >

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recom_heart_list_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

            </android.support.v7.widget.RecyclerView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                >

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</ScrollView>