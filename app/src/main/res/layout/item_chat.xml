<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/chat_main_linearlayout"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    >

    <LinearLayout
        android:id="@+id/chat_profile_layout"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/chat_profile_img"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/kakao_default_profile_image"
            />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/chat_mine_view_layout"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    </LinearLayout>

    <LinearLayout
        android:id="@+id/chat_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/chat_username_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="송제민"
            android:textSize="13sp"
            android:textColor="#2b2b2b"
            />

        <LinearLayout
            android:id="@+id/chat_chatting_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/chat_left_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AM 10:00"
                android:textSize="9sp"
                android:textColor="#898989"
                android:layout_marginRight="4.5dp"
                android:layout_gravity="bottom"
                />
            <TextView
                android:id="@+id/chat_chat_content_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="하이하이루~"
                android:textSize="15sp"
                android:textColor="#484848"
                android:layout_marginTop="10dp"
                android:background="@drawable/chat_gray"
                />
            <TextView
                android:id="@+id/chat_right_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AM 10:00"
                android:textSize="9sp"
                android:textColor="#898989"
                android:layout_marginLeft="8dp"
                android:layout_gravity="bottom"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>