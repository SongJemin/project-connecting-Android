<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="215dp">
        
        <ImageView
            android:id="@+id/mypage_background_img"
            android:layout_width="match_parent"
            android:layout_height="131dp"
            android:src="@drawable/img_prmdefalt"
            android:scaleType="centerCrop"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="마이페이지"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:layout_marginTop="11dp"
            android:layout_centerHorizontal="true"
            />
        
        <Button
            android:id="@+id/mypage_setting_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/btn_setting"
            android:layout_alignParentRight="true"
            android:layout_marginTop="11dp"
            android:layout_marginRight="12dp"
            />
        
        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="99dp"
            android:background="@drawable/circle_img"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/mypage_profile_img"
            android:layout_width="63dp"
            android:layout_height="63dp"
            android:src="@drawable/kakao_default_profile_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            />
        
        <RelativeLayout
            android:id="@+id/mypage_promise_number_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="59dp"
            android:layout_marginTop="154dp"
            >

            <TextView
                android:id="@+id/mypage_promise_number_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#383838"
                android:layout_centerInParent="true"
                />


        </RelativeLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="약속"
            android:textSize="11sp"
            android:textColor="#636363"
            android:layout_below="@+id/mypage_promise_number_layout"
            android:layout_marginLeft="62.9dp"
            />

    <RelativeLayout
        android:id="@+id/mypage_friend_number_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="62dp"
        android:layout_marginTop="154dp"
        >

        <TextView
            android:id="@+id/mypage_friend_number_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="25sp"
            android:textColor="#383838"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="친구"
            android:textSize="11sp"
            android:textColor="#636363"
            android:layout_below="@id/mypage_friend_number_layout"
            android:layout_alignParentRight="true"
            android:layout_marginRight="64.1dp"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e0e0e0"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:orientation="horizontal"
        android:layout_marginTop="30.5dp">

        <ImageView
            android:layout_width="14dp"
            android:layout_height="12.4dp"
            android:src="@drawable/icon_heart"
            android:layout_marginLeft="25.9dp"
            android:layout_marginTop="3dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="찜한장소"
            android:textColor="#2b2b2b"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginLeft="3dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="19dp"
        >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/mypage_list_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            >

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

</LinearLayout>